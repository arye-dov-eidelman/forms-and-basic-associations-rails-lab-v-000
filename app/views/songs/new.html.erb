<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br /><br />
  <label>Artist</label>
  <%= f.text_field :artist_name, list: "artist_autocomplete" %>
  <datalist id="artist_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br /><br />

  <label>genre</label>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br /><br />

  <fieldset>
    <legend>Notes</legend>

    <label for="song_note_1">Note 1</label><br />
    <textarea name="song[note_contents][]" id="song_notes_1" cols="25" rows="5"></textarea><br />

    <label for="song_note_2">Note 2</label><br />
    <textarea name="song[note_contents][]" id="song_notes_2" cols="25" rows="5"></textarea><br />
  
  </fieldset>
  <br /><br />
  <%= f.submit %>
<% end %>
